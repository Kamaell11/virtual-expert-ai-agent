# Virtual Expert AI Agent - Environment Configuration Template
# Copy this file to .env and fill in your values

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
# SQLite for development (simple, no setup required)
DATABASE_URL=sqlite:///./app.db

# PostgreSQL for production (uncomment and configure for production)
# DATABASE_URL=postgresql://ai_agent_user:your_password_here@localhost:5432/ai_agent_db

# ==============================================
# AUTHENTICATION & SECURITY
# ==============================================
# Generate a secure secret key for JWT tokens
# You can use: openssl rand -hex 32
SECRET_KEY=your_super_secret_key_here_change_this_in_production

# JWT token expiration time (in hours)
ACCESS_TOKEN_EXPIRE_HOURS=24

# ==============================================
# OLLAMA LLM CONFIGURATION
# ==============================================
# Ollama service URL (use http://localhost:11434 for local development)
OLLAMA_URL=http://localhost:11434

# Default LLM model to use
OLLAMA_MODEL=llama3.2:1b

# LLM Parameters (optional)
LLM_TEMPERATURE=0.7
LLM_TOP_P=0.9
LLM_TOP_K=40
LLM_REPEAT_PENALTY=1.1

# ==============================================
# WEB SEARCH CONFIGURATION
# ==============================================
# DuckDuckGo search settings
SEARCH_MAX_RESULTS=5
SEARCH_TIMEOUT=10

# Weather API settings (if using external weather service)
# WEATHER_API_KEY=your_weather_api_key_here

# ==============================================
# APPLICATION SETTINGS
# ==============================================
# Application environment (development, production)
APP_ENV=development

# API host and port for development
API_HOST=0.0.0.0
API_PORT=8000

# Enable/disable debug mode
DEBUG=true

# CORS allowed origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:8080

# ==============================================
# FILE UPLOAD CONFIGURATION
# ==============================================
# Maximum file upload size in MB
MAX_UPLOAD_SIZE=10

# Upload directory
UPLOAD_DIR=/app/uploads

# ==============================================
# LOGGING CONFIGURATION
# ==============================================
# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log file path
LOG_FILE=./logs/app.log

# ==============================================
# PRODUCTION SETTINGS (uncomment for production)
# ==============================================
# DATABASE_URL=postgresql://username:password@your-db-host:5432/database_name
# OLLAMA_URL=http://your-ollama-host:11434
# SECRET_KEY=your_production_secret_key
# DEBUG=false
# APP_ENV=production